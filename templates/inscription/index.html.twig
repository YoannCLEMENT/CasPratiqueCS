{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
<div class="example-wrapper">
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.email, 'Adresse mail') }}
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="row">
                <div class="col">
                        {{ form_label(form.lastname, 'Nom') }}
                        {{ form_row(form.lastname, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col">
                        {{ form_label(form.firstname, 'Pr√©nom') }}
                        {{ form_row(form.firstname, {'attr': {'class': 'form-control'}}) }}
                </div>
        </div>
        <div class="form-group">
            {{ form_label(form.password, 'Mot de passe') }}
            {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_row(form.submit, {'attr': {'class': 'btn btn-success'}}) }}
    {{ form_end(form) }}
</div>
{% endblock %}
